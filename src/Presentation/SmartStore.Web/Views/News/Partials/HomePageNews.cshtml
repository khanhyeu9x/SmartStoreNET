@model HomePageNewsItemsModel
@using SmartStore.Web.Models.News;

@if (Model.NewsItems.Count > 0)
{
    <div class="block news-list-homepage mb-5">
        <div class="row">
            <div class="col">
                <div class="heading">
                    <h3 class="heading-title fs-h1">@T("News")</h3>
                </div>
            </div>
            <div class="col col-auto">
                <a class="btn btn-warning" href="@Url.Action("rss", new { languageId = Model.WorkingLanguageId })" title="@T("News.RSS.Hint")">
                    <i class="fa fa-rss"></i>
                    <span>@T("News.RSS")</span>
                </a>
                <a class="btn btn-outline-info btn-flat" href="@Url.RouteUrl("NewsArchive")">
                    <span>@T("News.ViewAll")</span>
                    <i class="fa fa-angle-right"></i>
                </a>
            </div>
        </div>

        <div class="block-body news-items">
            <div class="row">
                @foreach (var item in Model.NewsItems)
                {
                    var picture = item.PictureModel;
                    <div class="col-md-3">
                        <div class="art-picture-block">
                            @if (picture != null && picture.ImageUrl.HasValue())
                            {
                                <a class="art-picture" href="@Url.RouteUrl("NewsItem", new { SeName = item.SeName })" title="@picture.Title">
                                    <img src="@picture.ImageUrl" alt="@picture.AlternateText" />
                                </a>
                            }
                        </div>
                        <div class="news-item mb-4">
                            <div class="text-muted small">
                                @item.CreatedOn.ToNativeString("D")
                            </div>
                            <h4 class="news-title">
                                <a class="fs-h5 color-body" href="@Url.RouteUrl("NewsItem", new { SeName = item.SeName })">
                                    @item.Title
                                </a>
                            </h4>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
}